#include <stdio.h>

int main() {
    char str[100];
    int contador = 0;

    printf("Digite uma palavra ou frase: ");
    fgets(str, sizeof(str), stdin);

    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == 'a' || str[i] == 'A') {
            contador++;
        }
    }

    if (contador > 0) {
        printf("A letra 'a' aparece %d vez(es) na palavra/frase digitada.\n", contador);
    } else {
        printf("A letra 'a' n√£o aparece na palavra/frase digitada.\n");
    }

    return 0;
}
